<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "A8FETR73Y9.com.phonegap.gibsonswatertracker"
        versionCode = "10" 
        version     = "2.1.3" >
	
    <name>Gibson's Water Tracking</name>
    <description>
     Set water alerts and track your water goal progress. Set local alert reminders to help you remember to drink water in order to reach your daily goal. Track the water that you consume and see how close you are to your set goal. This app saves the water that is tracked to the Apple Healthkit if given permission for historical reference. Also other water tracking apps that track to Healthkit are taken into consideration when viewing the daily goal amount.
    </description>

    <author href="https://build.phonegap.com" email="j_flottmeyer@voilamediagroup.com">
        John Flottmeyer
    </author>
    
    <gap:platform name="ios" />
   
    <!--<gap:platform name="android" />-->
    
    <!-- third party plugins -->
    <!--<gap:plugin name="com.phonegap.plugin.statusbar" spec="1.1.0" source="pgb" />-->
    <gap:plugin name="cordova-plugin-statusbar" source="npm" />
    <gap:plugin name="de.appplant.cordova.plugin.badge" version="0.6.2" />
	<gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.7.8" />
	<gap:plugin name="com.telerik.plugins.healthkit" source="npm" />

    <!-- universal preferences -->
    <preference name="phonegap-version"           value="cli-5.2.0" />         
    <preference name="fullscreen"                 value="true" />
	
	<!-- ios preferences --> 
    <preference name="target-device" value="universal" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    
    <!-- ios icons  6.1 -->
    <!-- iPhone / iPod Touch -->
    <icon src="icons/ios/apple-touch-icon-57-precomposed.png" gap:platform="ios" width="57" height="57"/>
    <!-- iPad -->
    <icon src="icons/ios/apple-touch-icon-72-precomposed.png" gap:platform="ios" width="72" height="72"/>
    <!-- ? -->
    <icon src="icons/ios/apple-touch-icon-114-precomposed.png" gap:platform="ios" width="114" height="114"/>
    
    <!-- ios icons 7+ -->
    <!-- iPhone / iPod Touch  -->
	<icon src="icons/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
	 
	<!-- iPad -->
	<icon src="icons/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icons/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />
	
	<!-- Settings Icon -->
	<icon src="icons/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
	<icon src="icons/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- Spotlight Icon -->
	<icon src="icons/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="icons/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" /> 

	<!-- iPhone and iPod touch -->
	<splash src="icons/splash/Default.png" platform="ios" width="320" height="480" />
	<splash src="icons/splash/Default@2x.png" platform="ios" width="640" height="960" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<splash src="icons/splash/Default-568h@2x.png" platform="ios" width="640" height="1136" />
	
	<!-- iPhone 6 -->
	<splash src="icons/splash/Default-667h@2x.png" platform="ios" width="750" height="1334" />
	<splash src="icons/splash/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
	<splash src="icons/splash/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />
	
	<!-- iPad -->
	<splash src="icons/splash/Default-Portrait.png" platform="ios" width="768" height="1024" />
	<splash src="icons/splash/Default-Landscape.png" platform="ios" width="1024" height="768" />
	
	<!-- Retina iPad -->
	<splash src="icons/splash/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
	<splash src="icons/splash/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
	
<gap:config-file platform="ios" parent="ITSAppUsesNonExemptEncryption" mode="add">
	<false/>
</gap:config-file>
</widget>
